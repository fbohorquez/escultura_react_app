# Configuración base de la aplicación
VITE_BASE_URL=http://localhost:5173
VITE_API_BASE_URL=https://escultura.dev2bit.com/api

# Versión de la aplicación
VITE_APP_VERSION=1.0.0

# Configuración de Firebase
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_DATABASE_URL=https://your_project.firebaseio.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Google Maps API
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Configuración del modo debug
# true = Activa el modo debug (navegación libre, sin GPS)
# false = Modo normal de producción (con GPS)
VITE_DEBUG_MODE=false

# Configuración de visibilidad de equipos en el mapa
# true = Los administradores pueden ver las posiciones de todos los equipos
# false = Los administradores no ven las posiciones de otros equipos
VITE_ADMIN_VIEW_TEAMS_POSITION=true

# true = El administrador puede ver su propia posición y orientación en el mapa
# false = Se mantiene el comportamiento actual sin mostrar la posición del administrador
VITE_ADMIN_POSITION_VIEW=true

# true = Los equipos pueden ver las posiciones de otros equipos en el mapa
# false = Los equipos solo ven su propia posición
VITE_TEAMS_VIEW_OTHER_TEAMS=false

# Configuración para compartir equipos por WebRTC
# true = Permite compartir la pantalla del equipo mediante WebRTC
# false = Deshabilita la funcionalidad de compartir equipos
VITE_SHARE_TEAM_ALLOW=false

# Servidor de señalización para compartir equipos
# URL del servidor WebRTC signaling para coordinar las conexiones
VITE_SHARE_TEAM_SIGNALING_SERVER=ws://localhost:3088

# Configuración de acceso directo por evento
# true = Limpia la sesión local al acceder con parámetro event
# false = Mantiene la sesión local existente
VITE_EVENT_ACCESS_CLEAR_SESSION=true

# Configuración de acceso simultáneo desde otro dispositivo para el mismo equipo
# Valores posibles:
# - "not": bloquea el acceso mostrando mensaje de dispositivo en uso
# - "admin": bloquea y delega la aprobación a un administrador (mock por ahora)
# - "take": el nuevo dispositivo toma el control generando un nuevo token
VITE_SAME_TEAM=not

# Configuración de orientación forzada
# true = Fuerza la orientación portrait en dispositivos móviles/tablet
# false = Permite rotación libre del dispositivo
VITE_FORCE_PORTRAIT_ORIENTATION=false

# Tipo de dispositivos a los que aplicar el forzado de orientación
# todos = Aplicar a todos los dispositivos
# mobile = Aplicar solo a móviles
# tablet = Aplicar solo a tablets
# mobile,tablet = Aplicar a móviles y tablets
VITE_FORCE_PORTRAIT_DEVICE_TYPES=mobile

# Omitir popup de proximidad de actividades y comenzar automáticamente
VITE_POPUP_ACTIVITY_SKIP=false
