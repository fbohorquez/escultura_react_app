# Configuración para el despliegue remoto

# Configuración del servidor
REMOTE_USER=ec2-user
REMOTE_HOST=dev2bit.com
REMOTE_PATH=/srv/escultura-react
SSH_KEY=$HOME/.ssh/dev2bit.pem

# Archivos y directorios a excluir del rsync
EXCLUDE_PATTERNS=(
    "node_modules"
    ".git"
    "dist"
    ".vscode"
    "*.log"
    ".DS_Store"
    ".env.local"
    ".env.development.local"
    ".env.test.local"
    ".env.production.local"
    "coverage"
    ".nyc_output"
    ".cache"
    "tmp"
    "temp"
)

# Opciones adicionales de rsync
RSYNC_OPTIONS="--progress --human-readable --compress"

# Timeout para verificaciones de salud
HEALTH_CHECK_TIMEOUT=30
